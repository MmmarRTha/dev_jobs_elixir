<header class="fixed top-0 left-0 right-0 backdrop-blur-xl shadow-soft border-y border-white/10 z-50 py-2 rounded-md">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between py-4 text-sm">
      <div class="flex items-center gap-4">
        <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
          <img src={~p"/images/logo.svg"} class="size-8 md:size-12" />
        </a>
      </div>

      <nav class="flex items-center gap-4 text-xl font-medium text-orange-400 lg:ml-48">
        <.link class="hidden md:inline text-2xl font-bold" navigate={~p"/"}>DevJobs</.link>
        <.link
          :if={@current_user}
          class="text-orange-400/90 hover:text-white font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-orange-400"
          navigate={~p"/my-job-listings"}
        >
          <.icon name="hero-pencil-square" class="w-4 h-4 mr-1" />Jobs
        </.link>
        <.link
          :if={@current_user}
          class="text-orange-400/90 hover:text-white font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-orange-400"
          navigate={~p"/my-profile"}
        >
          <.icon name="hero-user-circle" class="w-4 h-4 mr-1" />Profile
        </.link>
      </nav>

      <.live_component
        id="login-form"
        module={DevJobsWeb.LoginLiveComponent}
        current_user={@current_user}
      />
    </div>
  </div>
</header>

<main class="px-4 py-20 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto text-sm">
    <.flash_group flash={@flash} />
    {@inner_content}
  </div>
</main>
