<header class="px-4 sm:px-6 lg:px-8">
  <div class="flex items-center justify-between py-3 text-sm border-b border-zinc-100">
    <div class="flex items-center gap-4">
      <a href="/">
        <img src={~p"/images/logo.svg"} width="36" />
      </a>
      <p class="px-2 font-medium leading-6 rounded-full bg-brand/5 text-brand">
        v<%= Application.spec(:phoenix, :vsn) %>
      </p>
    </div>
    <div class="flex items-center gap-4 text-lg font-semibold text-white">
      <.link navigate={~p"/"}>
        All Jobs
      </.link>
      <.link navigate={~p"/my-job-listings"}>
        Employers: Posted Jobs
      </.link>
      <.link navigate={~p"/my-profile"}>
        My Profile
      </.link>
    </div>
    <.live_component
      id="login-form"
      module={DevJobsWeb.LoginLiveComponent}
      current_user={@current_user}
    />
  </div>
</header>
<main class="px-4 py-20 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <.flash_group flash={@flash} />
    <%= @inner_content %>
  </div>
</main>
