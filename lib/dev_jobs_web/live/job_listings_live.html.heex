<div class="text-center mt-10">
  <h1 class="text-3xl md:text-5xl font-bold text-white my-4 animate-fade-in">
    Find Your Next
    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-accent-400">
      Dream Job
    </span>
  </h1>
  <p class="text-base md:text-xl text-white/80 mb-8 max-w-2xl mx-auto">
    Discover amazing opportunities from top companies around the world
  </p>
</div>

<div class="bg-white/10 backdrop-blur-md rounded-2xl px-8 py-10 md:py-16 shadow-card animate-slide-up">
  <.form for={@form} phx-change="search" phx-submit="search" autocomplete="off">
    <div class="flex flex-col md:flex-row gap-4">
      <div class="flex-1 relative">
        <.input
          field={@form[:search_text]}
          placeholder="Search by title, company, or keywords..."
          class="text-base pr-12"
          phx-debounce="500"
        />
        <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
          <div :if={@searching} class="animate-spin">
            <.icon name="hero-arrow-path" class="w-5 h-5 text-accent-400" />
          </div>
          <div :if={!@searching && @search_params["search_text"]} class="text-accent-400">
            <.icon name="hero-magnifying-glass" class="w-5 h-5" />
          </div>
        </div>
      </div>
      <div class="flex gap-8 items-center justify-center md:justify-end mt-3 md:mt-0">
        <.button
          type="submit"
          class="bg-accent-400 hover:bg-accent-500 text-white font-medium px-4 py-3 rounded-lg transition-colors duration-200 shadow-card hover:shadow-card-hover"
          disabled={@searching}
        >
          <.icon name="hero-magnifying-glass" class="w-4 h-4 mr-2" />
          <span :if={!@searching}>Search</span>
          <span :if={@searching}>Searching...</span>
        </.button>
        <.button
          type="button"
          phx-click="clear_search"
          class="bg-secondary-400 hover:bg-secondary-500 text-white font-medium px-5 py-3 rounded-lg transition-colors duration-200 shadow-card hover:shadow-card-hover items-center flex"
        >
          <.icon name="hero-x-mark" class="w-4 h-4 mr-2" /> Clear
        </.button>
      </div>
    </div>
  </.form>
</div>

<div class="my-4 text-center">
  <h1 class="text-xl font-bold text-white uppercase">Job Listings</h1>
  <div :if={@search_params["search_text"] && @search_params["search_text"] != ""} class="mt-2">
    <p class="text-white/70">
      <span :if={@searching}>Searching for "{@search_params["search_text"]}"...</span>
      <span :if={!@searching && @total_results > 0}>
        Found {@total_results} result{if @total_results != 1, do: "s"} for "{@search_params[
          "search_text"
        ]}"
      </span>
      <span :if={!@searching && @total_results == 0 && @end_of_timeline?}>
        No results found for "{@search_params["search_text"]}"
      </span>
    </p>
  </div>
</div>

<div
  class="space-y-8"
  id="job_listings"
  phx-update="stream"
  phx-viewport-bottom={!@end_of_timeline? && "next-page"}
>
  <.job_listing_rows
    :for={{dom_id, job_listing} <- @streams.job_listings}
    id={dom_id}
    job_listing={job_listing}
  />
  <div :if={@end_of_timeline?} class="text-center py-16">
    <div class="mx-auto w-24 h-24 bg-white/10 rounded-full flex items-center justify-center mb-6">
      <.icon name="hero-briefcase-outline" class="w-12 h-12 text-white/60" />
    </div>
    <h3 class="text-xl font-semibold text-white mb-2">No jobs found</h3>
    <p class="text-white/70 mb-6 max-w-md mx-auto">
      We couldn't find any job listings matching your search. Try adjusting your search terms or check back later for new opportunities.
    </p>
    <a
      href="/"
      class="inline-flex items-center bg-accent-300 hover:bg-accent-400 text-white font-medium px-6 py-3 rounded-lg transition-colors duration-200"
    >
      <.icon name="hero-arrow-path" class="w-4 h-4 mr-2" /> Clear Search
    </a>
  </div>
</div>
